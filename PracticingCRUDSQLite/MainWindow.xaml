<Window x:Class="PracticingCRUDSQLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticingCRUDSQLite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="UserList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,235">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Address" Width="300" DisplayMemberBinding="{Binding Address}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <CheckBox x:Name="checkbox" Content="CheckBox" HorizontalAlignment="Left" Margin="10,205,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.389,0.924"/>
        <Grid x:Name="EditGrid" IsEnabled="{Binding ElementName=checkbox, Path=IsChecked}" RenderTransformOrigin="0.388,0.573">
            <Label Content="Name" HorizontalAlignment="Left" Margin="20,306,0,0" VerticalAlignment="Top"/>
            <Label Content="Address" HorizontalAlignment="Left" Margin="20,332,0,0" VerticalAlignment="Top"/>
            <TextBox Name="txtName" HorizontalAlignment="Left" Margin="80,310,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="txtAddress" HorizontalAlignment="Left" Margin="80,336,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <Button Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="20,394,0,0" VerticalAlignment="Top" Click="btnCreate_Click"/>
        <Button Name="btnRead" Content="Read" HorizontalAlignment="Left" Margin="79,394,0,0" VerticalAlignment="Top" Click="btnRead_Click"/>
        <Button Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="137,394,0,0" VerticalAlignment="Top" Click="btnUpdate_Click"/>
        <Button Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="201,394,0,0" VerticalAlignment="Top" Click="btnDelete_Click"/>

    </Grid>
</Window>
